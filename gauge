function showSearchDemandGauge() {
  const html = HtmlService.createHtmlOutputFromFile('SearchGauge')
    .setTitle('Search Demand Gauge')
    .setWidth(500);
  SpreadsheetApp.getUi().showSidebar(html);
}

function getSearchGaugeData() {
  const sheet = SpreadsheetApp.getActiveSpreadsheet().getActiveSheet();
  const value = sheet.getRange("B2").getValue(); // Search Demand actual value
  const thresholds = sheet.getRange("E2:E4").getValues().flat(); // Red, Yellow, Green max

  return {
    value: value,
    thresholds: {
      redMax: thresholds[0],
      yellowMax: thresholds[1],
      greenMax: thresholds[2]
    }
  };
}

----------------------------------------------------------------

<!DOCTYPE html>
<html>
  <head>
    <base target="_top">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
      google.charts.load('current', {'packages':['gauge']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        google.script.run.withSuccessHandler(function(result) {
          const data = google.visualization.arrayToDataTable([
            ['Label', 'Value'],
            ['Search', result.value]
          ]);

          const thresholds = result.thresholds;

          const options = {
            width: 400,
            height: 200,
            redFrom: 0,
            redTo: thresholds.redMax,
            yellowFrom: thresholds.redMax,
            yellowTo: thresholds.yellowMax,
            greenFrom: thresholds.yellowMax,
            greenTo: thresholds.greenMax,
            max: thresholds.greenMax,
            minorTicks: 5,
            animation: { duration: 800, easing: 'out' }
          };

          const chart = new google.visualization.Gauge(document.getElementById('gauge_div'));
          chart.draw(data, options);
        }).getSearchGaugeData();
      }
    </script>
  </head>
  <body>
    <h3 style="text-align:center;">Search Demand</h3>
    <div id="gauge_div" style="width: 100%; height: 220px;"></div>
  </body>
</html>
